generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Companions {
  id        String   @id @default(uuid())
  name      String
  subject   String
  topic     String
  style     String
  voice     String
  duration  Int
  author    String
  createdAt DateTime @default(now())

  SessionHistories SessionHistory[]
}

model SessionHistory {
  id           String     @id @default(uuid())
  user_id      String
  companion_id String
  createdAt    DateTime   @default(now())
  Companion    Companions @relation(fields: [companion_id], references: [id])
}
